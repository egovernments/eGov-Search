<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="egovSearchProperties"
          class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>classpath*:config/egov-search.properties</value>
                <value>classpath*:config/egov-search-override.properties</value>
            </list>
        </property>

        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

    <bean id="searchPropertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties" ref="egovSearchProperties"/>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

</beans>
