{
  "dynamic_templates": [
    {
      "clauses": {
        "path_match": "clauses.*",
        "mapping": {
          "index": "not_analyzed"
        }
      }
    },
    {
      "simple_dates": {
        "path_match": "*_date",
        "mapping": {
          "type": "date",
          "format": "dd-MMM-YY"
        }
      }
    },
    {
      "searchable": {
        "path_match": "*email",
        "mapping": {
          "index": "not_analyzed"
          
        }
      }
    },
    {
      "common": {
        "path_match": "*email",
        "mapping": {
          "index": "not_analyzed"
          
        }
      }
    }
  ]
}